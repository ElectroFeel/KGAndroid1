<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Первая тень -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000"/>
            <corners android:radius="8dp"/>
            <size android:width="48dp" android:height="48dp"/>
            <padding android:left="3dp" android:top="3dp"/>
            <gradient android:startColor="#FF0000" android:endColor="#FF0000"
                android:angle="90"/>
        </shape>
    </item>

    <!-- Вторая тень -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000"/>
            <corners android:radius="8dp"/>
            <size android:width="48dp" android:height="48dp"/>
            <padding android:left="5dp" android:top="5dp"/>
            <gradient android:startColor="#00FF00" android:endColor="#00FF00"
                android:angle="90"/>
        </shape>
    </item>

    <!-- Третья тень -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000"/>
            <corners android:radius="8dp"/>
            <size android:width="48dp" android:height="48dp"/>
            <padding android:left="7dp" android:top="7dp"/>
            <gradient android:startColor="#0000FF" android:endColor="#0000FF"
                android:angle="90"/>
        </shape>
    </item>


</layer-list>
